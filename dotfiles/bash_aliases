alias aliases="nano ~/.bash_aliases"

alias lmstudio="/opt/studio/studio.AppImage"


alias dormir="sh ~/.adormir.sh"


# some more ls aliases
alias l='ls -F'	# Modo corto
alias ll='ls -lFh'	# Modo lista
alias la='ls -AalFh'	# Modo lista muestra ocultos
alias li='ls -AalFhi'    # Modo lista muestra ocultos y su inode

alias casa='cd /mnt/DATOS/LINUX/c2mismo'

alias docu='cd $HOME/PROYECTOS/documentos'
alias arch='cd $HOME/PROYECTOS/archLinux'
alias dot='cd $HOME/PROYECTOS/dotfiles/'
alias cara='cd $HOME/PROYECTOS//caravan/'

