alias gpu='~/.gitpush.sh'

alias gst='~/.gitstatus.sh'

alias dirtemp='dirtemp=$(mktemp -dp /run/user/$UID) && chmod +t $dirtemp && echo $dirtemp && cd $dirtemp'


# ls -F
# @ significa enlace simbólico (o que el archivo tiene atributos extendidos)
# * significa ejecutable
# = significa zócalo
# | significa pipa nombrada
# > significa puerta
# / significa directorio

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'



